<legend>
  <h1>Sign in</h1>
</legend>

<%= simple_form_for(resource, :as => resource_name,
                              :url => session_path(resource_name),
                              :html => { class: 'form-horizontal' } ) do |f| %>
  <%= f.input :email,
              as: :email,
              input_html: { class: 'input-xlarge' } %>
  <%= f.input :password,
              hint: "#{link_to 'Forgot your password?',
              new_password_path(resource_name)}",
              input_html: { class: 'input-xlarge' } %>
  <%= f.input :remember_me,
              :inline_label => 'Yes, remember me.',
              :label => false,
              :as => :boolean if devise_mapping.rememberable? %>

  <%= f.button :submit, 'Sign in', style: 'margin-left: 180px;', :class => 'btn btn-warning' %>

<% end %>

