<div class='row'>
  <div class='span12'>
    <%= link_to raw('<i class="icon-plus"></i> New Startup'),
                new_startup_path,
                :id => 'new_startup',
                :class => 'btn btn-warning' if current_user %>
    <%= link_to raw('<i class="icon-plus"></i> New Batch'),
                new_batch_path,
                :id => 'new_batch',
                :class => 'btn btn-warning' if current_user.try(:admin) %>
  </div>
</div>

<div style='clear: both;'>
  <% @batches.each do |batch| %>
    <% if batch.startups.count == 0 %>
      <div style='text-align: center;' class='well'>
        <h2>
          <%= batch.title %>
          <% if current_user.try(:admin) %>
            <%= link_to raw("<i class='icon-edit'></i>"),
                        edit_batch_path(batch),
                        :id => "edit_batch_#{batch.id}" %>
          <% end %>
        </h2>
        Coming soon!
      </div>
    <% else %>
      <h2><%= batch.title %></h2>
    <% end %>
  <% end %>
</div>

<!-- REST OF STARTUPS -->
<div style='clear: both;'>
  <h2>All registered startups</h2>
  <% @startups.each do |startup| %>
    <div class='startup'>
      <div class='startup_image'>
        <%= image_tag startup.logo.url(:standard) %>
      </div>
      <div class='startup_text'>
        <h2><%= link_to startup.name, startup %></h2>
        <p><%= startup.short_description %></p>
      </div>
    </div>
  <% end %>
</div>
