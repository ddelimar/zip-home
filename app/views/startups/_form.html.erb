<%= simple_form_for @startup,
                    :html => { multipart: true } do |f| %>

  <%= f.input :name,
              input_html: { class: 'input-xlarge' } %>
  <%= f.file_field :logo %>
  <%= f.input :short_description,
              hint: 'max 100 characters',
              as: :text,
              input_html: { class: 'input-xlarge', rows: '3' } %>
  <%= f.input :long_description,
              as: :text, 
              input_html: { class: 'max_width', rows: '10' } %>

  <%= render 'markdown_cheatsheet' %>

  <%= f.button :submit, :class => 'btn btn-primary' %>


<% end %>
