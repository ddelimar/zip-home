<%= content_for :mainbar do %>
  <%= render @posts %>
<% end %>

<%= content_for :sidebar do %>
  <%= link_to 'New Post',
              new_post_path,
              :id => 'new_post',
              :class => 'btn btn-success' if current_user.try(:admin) %>
  <h3>Authors:</h3>
  
  <% admins.each do |admin| %>
    <%= image_tag(gravatar_picture(admin, 60), :class => 'img-circle') %>
  <% end %>

  <%= render 'startups_carousel' %>

<% end %>
