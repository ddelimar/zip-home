<div class='post'>
  <h2><%= link_to post.title, post, :id => "post_#{post.id}" %></h2>
  <small>
    by <%= post.user.username %> on <%= time_tag(post.created_at, :format => '%B %d, %Y') %>
    <% if current_user.try(:admin) %>
      <%= link_to raw('<i style="color: #999;" class="icon-edit"></i>'),
                  edit_post_path(post),
                  :id => "edit_post_#{post.id}" %>
      <%= link_to raw('<i style="color: #999;" class="icon-remove"></i>'),
                  post_path(post),
                  :method => :delete,
                  :confirm => "Are you sure you wish to delete post '#{post.title}' ?",
                  :id => "delete_post_#{post.id}" %>
    <% end %>
  </small>
  <div class='row-fluid'>
    <div class='span4'>
      <%= image_tag post.featured_image.url(:thumbnail) %>
    </div>
    <div class='span8'>
      <p><%= markdown(truncate (post.body), length: 280, :separator => ' ') %></p>
      <p class='text-right'><%= link_to raw('read more <i class="icon-circle-arrow-right"></i>'), post %></p>
    </div>
  </div>
</div>
