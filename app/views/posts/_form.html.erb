<%= simple_form_for @post do |f| %>

  <%= f.input :title,
              placeholder: "SEO uber optimised title",
              input_html: { class: 'max_width' } %>
  <%= f.input :body,
              as: :text,
              placeholder: "Once upon a time...",
              input_html: { class: 'max_width' } %>
  <%= f.button :submit, :class => 'btn btn-primary' %>

<% end %>
