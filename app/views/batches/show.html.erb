<h1>
  <%= @batch.title %>
  <% if current_user.try(:admin) %>
    <%= link_to raw("<i style='color: #999;' class='icon-edit'></i>"),
                edit_batch_path(@batch),
                :id => "edit_batch_#{@batch.id}" %>
      <%= link_to raw('<i style="color: #999;" class="icon-remove"></i>'),
                  batch_path(@batch),
                  :method => :delete,
                  :confirm => "Are you sure you wish to delete entire '#{@batch.title}' batch ?",
                  :id => "delete_batch_#{@batch.id}" %>
  <% end %>
</h1>
