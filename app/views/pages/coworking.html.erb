<%= content_for :header do %>
  <div class="carousel_background">
    <div class='container'>

      <div id="myCarousel" class="carousel slide">
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
          <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <!-- Carousel items -->
        <div class="carousel-inner">
          <div class="active item hero_carousel" style="background-position: center 40%; background-image: url(<%= asset_path 'pic_coworking_6.jpg' %>)">
            <h1>ZIP offers great<br/>Coworking<br/>Space</h1>
          </div>
          <div class="item hero_carousel" style="background-image: url(<%= asset_path 'pic_coworking_3.jpg' %>);">
            <h1>With both<br/>casual...</h1>
          </div>
          <div class="item hero_carousel" style="background-image: url(<%= asset_path 'pic_coworking_5.jpg' %>);">
            <h1>And peacefull<br/>working<br/>atmosphere</h1>
          </div>
          <div class="item hero_carousel" style="background-image: url(<%= asset_path 'pic_coworking_4.jpg' %>);">
            <h1 style='text-align: center;'>Join us!</h1>
          </div>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
      </div>

    </div>
  </div>
<% end %>

