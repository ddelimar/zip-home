<div class='hero-unit'>
  
  <div class='row'>

    <div class='span6'>
      <h1 style='margin-bottom: 16px;'>Apply to ZIP!</h1>
      <%= content_tag(:p,
                      raw("1. Create your #{link_to 'user account', new_user_registration_path} / #{link_to 'Log in', new_user_session_path}"),
                      :style => ("text-decoration: line-through" if current_user)) %>
      <%= content_tag(:p,
                      raw("2. Create a #{link_to 'startup you wish to apply with', new_startup_path}"),
                      :style => ("text-decoration: line-through" if current_user && current_user.startups.count != 0)) %>
      <p>3. Submit application</p>

      <div class="progress progress-warning progress-striped active">
        <% if current_user == nil %>
          <div class="bar" style="width: 2%"></div>
        <% end %>

        <% if current_user %>
          <% if current_user.startups.count == 0 %>
            <div class="bar" style="width: 33%">1/3 complete</div>
          <% else %>
            <div class="bar" style="width: 66%">almost done!</div>
          <% end %>
        <% end %>
      </div>

    </div>

    <div class='span4'>
      <p><i class='icon-question-sign'></i> what do I get?</p>
    </div>
  </div
  
</div>
